{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": false,
    "rootDir": "../",
    "outDir": "../../.main"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "../**/*.spec.ts",
    "**/*.test.ts",
    "../**/*.test.ts",
    "nxpress",
    "foundations/client",
    "**/*.tsx"
  ],
  "include": [
    "**/*.ts",
    "../types/*",
    "../foundations/**/*.ts",
    "../app/**/api/**/*.ts",
    "../pages/**/api/**/*.ts",
    "../features/**/*.ts"
  ]
}